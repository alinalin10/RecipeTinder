const express = require('express');
const router = express.Router();
const { getRecipeById } = require('../services/spoonacularService');

// Get Spoonacular recipe by ID
router.get('/:id', async (req, res) => {
    try {
        const recipeData = await getRecipeById(req.params.id);
        res.json({ success: true, data: recipeData });
    } catch (error) {
        console.error('Error fetching Spoonacular recipe:', error);
        res.status(500).json({ 
            success: false, 
            message: 'Failed to fetch recipe from Spoonacular' 
        });
    }
});

module.exports = router;